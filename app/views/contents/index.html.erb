<div class="contents row">
  <% unless user_signed_in? %>
    <div class="grid-6">
      <%= link_to 'Log In', new_user_session_path, class: 'post' %>
      <%= link_to 'Sign Up', new_user_registration_path, class: 'post' %>
    </div>
  <% else %>
    <h1>こんにちは<%= current_user.nickname %></h1>
    <% @contents.each do |content| %>
      <% if current_user.id == content.user_id %>
        <div class="content_post">
          <p><%= content.title %></p>
          <span class="name">
            <%= content.media.name %>
            <%= content.week.name %>
            <%= content.notice.name %>
          </span>
          <div class="more">
            <ul class="more_list">
              <p>
                <%= link_to '編集', edit_content_path(content.id), method: :get, class:"linkList" %>
              </p>
              <p>
                <%= link_to '削除', content_path(content.id), method: :delete, class:"linkList" %>
              </p>
            </ul>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
