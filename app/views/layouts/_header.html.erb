<header>
  <h1><a href="/">Notify</a></h1>
  <div class="header_bar">
    <% if user_signed_in? %>
    <div class="sp_button">Menu</div>
      <div class="user_nav">
        <div class="user_nickname" ><%= current_user.nickname %></div>
        <%= link_to 'Add Content', new_content_path, class: 'post' %>
          <ul class="user_in">
            <%= link_to 'My List', "/users/#{current_user.id}", class: 'user_link' %>
            <%= link_to "User Edit", edit_user_registration_path, class: 'user_link' %>
            <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: 'user_link' %>
          </ul>
      </div>
    <% else %>
      <ul class="user_out"> 
        <%= link_to 'Log In', new_user_session_path, class: 'user_link' %>
        <%= link_to 'Sign Up', new_user_registration_path, class: 'user_link' %>
      </ul>
    <% end %>
  </div>
</header>
