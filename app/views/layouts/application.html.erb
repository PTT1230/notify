<!DOCTYPE html>
<html>
  <head>
    <title>Notify</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  
  <body>
    <header class="header">
      <h1 class="grid-6"><a href="/">Notify</a></h1>
      <div class="header__bar row">
        <% if user_signed_in? %>
          <div class="user_nav grid-6">
           <%= link_to 'New', new_content_path, class: 'post' %>
            <div class="user_nav" ><%= current_user.nickname %>
              <ul class="user__info">
                <%= link_to 'My Page', "/users/#{current_user.id}", class: 'post' %>
                <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: 'post' %>
              </ul>
            </div>
          </div>
        <% else %>
          <div class="grid-6">
            <%= link_to 'Log In', new_user_session_path, class: 'post' %>
            <%= link_to 'Sign Up', new_user_registration_path, class: 'post' %>
          </div>
        <% end %>
      </div>
    </header>
  <%= yield %>
    <footer>
      <p>
        Copyright Notify 2022.
      </p>
    </footer>
  </body>
</html>