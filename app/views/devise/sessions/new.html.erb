<div id="sign_in">
<canvas class="background"></canvas>
  <div class="container">
  <%# deivseのフラッシュメッセージを表示 %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
    <h1>Welcome back!</h1>
    <h2>Sign In to Your Account</h2>

    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render 'devise/shared/error_messages', model: f.object %>
      
      <div class="field">
        <%= f.label :email %><br>
        <%= f.email_field :email, autofocus: true, placeholder: "--Email Address--", class: 'input-field' %>
      </div>

      <div class="field">
        <%= f.label :password %><br>
        <%= f.password_field :password, autocomplete: 'off', placeholder: "--Password--", class: 'input-field' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.label :remember_me %><br>
          <%= f.check_box :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit 'Sign In', class:"a btn btn-gradient span"%>
      <%#a href="Sign In" class="btn btn-gradient"><span>PUSH！</span></a %>
      </div>

      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/particlesjs/2.2.2/particles.min.js"></script>