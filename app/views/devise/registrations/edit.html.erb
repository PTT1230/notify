<div id="user_edit">
  <div class="edit">
  <h2>Edit Account</h2>
  <% if user_signed_in? && @user.provider.blank? %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'devise/shared/error_messages', model: f.object %>

      <div class="field">
        <%= f.label :email %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'edit_link' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <br><div class ="password"><%= @minimum_password_length %> 文字以上(変更しない場合は空白にしてください)</div>
        <%= f.password_field :password, autocomplete: 'new-password', class: 'edit_link' %>
        <% if @minimum_password_length %>
          
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'edit_link' %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <div class="password">(確認のため現在のパスワードを入力してください)</i><br>
        <%= f.password_field :current_password, autocomplete: 'current-password', class: 'edit_link' %>
      </div>

      <div class="actions">
        <%= f.submit 'Update', class: 'submit' %>
      </div>
    <% end %>

    <h3>アカウントを削除しますか？ </h3>

    <%= button_to 'Cancel my account', registration_path(resource_name), data: { confirm: 'Are you sure?' }, method: :delete, class: 'cancel' %>
  <% else %>   
    <h1>ラインユーザーは編集できません</h1>
  <% end %>
  <%= link_to 'Back to Top Page', root_path, class: 'back' %>
  </div>
</div>