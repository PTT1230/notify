<% if user_signed_in? %>
  <div id="mylist_show">
    <h1>あなたの視聴一覧です</h1>
    <h2>Here is your list</h2>
    <div class="lists">
    <% @contents.each do |content| %>
      <% if current_user.id == content.user_id %>
        <div class="content_post">
          <p><%= content.title %></p>
            <%= content.media.name %>
            <%= content.week.sub_name %>
            <%= content.notice.name %>
          <div class="more_list">
            <%= link_to edit_content_path(content.id), method: :get, class:"link_list" do %>
            <i class="fa-solid fa-pen-to-square"></i><% end %>
            <%= link_to content_path(content.id), method: :delete, class:"link_list" do %>
            <i class="fa-solid fa-trash-can"></i><% end %>
          </div>
        </div>
      <% end %>
    <% end %>
    </div>
    <% if @contents.length <= 0  %>
      <p>No Lists!</p>
    <% end %>
  </div>
<% end %>
